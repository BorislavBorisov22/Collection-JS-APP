<form id="register-form" class="form-horizontal">
    <fieldset>
        <legend>
            <h3>Register</h3>
        </legend>

        <section class="form-group">
            <label for="input-first-name" class="col-md-1 control-label">First Name</label>
            <p class="col-md-10">
                <input class="form-control" id="input-first-name" placeholder="First Name" type="text" required>
            </p>
        </section>

        <section class="form-group">
            <label for="input-last-name" class="col-md-1 control-label">Last Name</label>
            <p class="col-md-10">
                <input class="form-control" id="input-last-name" placeholder="Last Name" type="text" required>
            </p>
        </section>

        <section class="form-group">
            <label for="input-username" class="col-md-1 control-label">Username</label>
            <p class="col-md-10">
                <input class="form-control" id="input-username" placeholder="Username" type="text" required>
            </p>
        </section>

        <section class="form-group">
            <label for="input-password" class="col-md-1 control-label">Password</label>
            <p class="col-md-10">
                <input class="form-control" id="input-password" placeholder="Password" type="password" required>
            </p>
        </section>

        <section class="form-group">
            <label for="input-password-repeat" class="col-md-1 control-label">Confirm Password</label>
            <p class="col-md-10">
                <input class="form-control" id="input-password-repeat" placeholder="Password" type="password" required>
            </p>
        </section>

        <section class="form-group">
            <p class="col-sm-4 col-sm-offset-1">
                <button type="reset" class="btn btn-default">Cancel</button>
                <input type="submit" id="btn-register" class="btn btn-primary" value="Register" />
            </p>
        </section>
    </fieldset>
</form>